<mvc:View
    controllerName="hipt.hipt.controller.StepDetails"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page id="StepDetails">
        <content>
            <Panel
                id="StepDetailsPanel"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <content>
                    <List
                        id="TaskList2"
                        headerText="{ActiveScope>/stepStr}"
                        headerLevel="H2"
                        items="{ActiveScope>/aSteps}"
                    >
                        <ObjectListItem
                            id="taskListItem2"
                            title="{ActiveScope>1/stepStr}"
                            press=".onStepClick"
                            type="Navigation"
                            counter="42"
                            icon="sap-icon://electrocardiogram"
                            intro="{ActiveScope>1/sStatus}"
                            number="007"
                            numberState="None"
                        />
                    </List>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
