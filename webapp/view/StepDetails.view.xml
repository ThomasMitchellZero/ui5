<mvc:View
    controllerName="hipt.hipt.controller.StepDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Panel
        id="StepDetails"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <List
                id="TaskList"
                headerText="Products"
                headerLevel="H2"
                items="{TestModel>/arr}"
            >
                <StandardListItem
                    id="taskListItem"
                    title="{TestModel>n}"
                />
            </List>

            <List
                id="TaskList2"
                headerText="{ActiveScope>/stepStr}"
                headerLevel="H2"
                items="{ActiveScope>/aSteps}"
            >
                <StandardListItem
                    id="taskListItem2"
                    title="{ActiveScope>1/stepStr}"
                />
            </List>
        </content>
    </Panel>
</mvc:View>
