<mvc:View
    controllerName="hipt.hipt.controller.StepDetails"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:chart="sap.suite.ui.microchart"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="StepDetails"
        title="{ActiveScope>/stepStr}"
    >
        <content>
            <HBox
                id="ChartHolder"
                alignItems="Center"
                alignContent="Start"
                width="auto"
                wrap="Wrap"
                class="sapUiLargeMarginTopBottom sapUiLargeMarginLeftRight"
            >
                <chart:RadialMicroChart
                    alignContent="Center"
                    id="progressChart"
                    percentage="{ActiveScope>/percentage}"
                    valueColor="Good"
                    size="L"
                />
                <VBox id="completionText">
                    <Title
                        id="ChartText"
                        text="{
                            parts: [ {path: 'ActiveScope>/stepStr'}, {value: 'Completion'}]
                        }"
                    />
                    <ObjectNumber
                        id="ProjDescription"
                        number="{ActiveScope>/completion/complete}"
                        class="sapMObjectNumberLarge"
                        state="Success"
                        emphasized="true"
                        unit="{
                            parts: [{value: '/'}, {path: 'ActiveScope>/completion/total'}]
                        }"
                    />
                </VBox>
            </HBox>

            <Panel
                id="StepDetailsPanel1"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <Table
                    id="bookingTable"
                    items="{ActiveScope>/aSteps}"
                    headerText="Progress"
                    growing="true"
                    growingThreshold="5"
                    width="auto"
                >
                    <columns>

                        <Column
                            id="cName"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                        >
                            <header>
                                <Text
                                    id="tName"
                                    text="Info"
                                />
                            </header>
                        </Column>
                        <Column
                            id="cCompletion"
                            hAlign="Begin"
                            minScreenWidth="Tablet"
                            demandPopin="true"
                            width="20%"
                        >
                            <header>
                                <Text
                                    id="tCompletion"
                                    text="Completion"
                                />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            id="listItem"
                            type="Navigation"
                            vAlign="Middle"
                            press=".onStepClick"
                        >
                            <cells>
                                <VBox
                                    id="stepInfo"
                                    class="sapUiSmallMarginTopBottom"
                                >
                                    <ObjectNumber
                                        id="cellObjTitle"
                                        number="{ActiveScope>1/stepStr}"
                                        class="sapMObjectNumberLarge sapUiTinyMarginBottom"
                                    />
                                    <ObjectStatus
                                        id="stepStatus"
                                        text="{ActiveScope>1/title}"
                                        state="{ActiveScope>1/sStatus}"
                                        icon="{ActiveScope>1/icon}"
                                    />
                                </VBox>
                                <VBox id="completionNums">
                                    <ObjectNumber
                                        id="cellObjNumber"
                                        number="{ActiveScope>1/fraction}"
                                        class="sapMObjectNumberLarge"
                                        state="{ActiveScope>1/sStatus}"
                                    />
                                </VBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
