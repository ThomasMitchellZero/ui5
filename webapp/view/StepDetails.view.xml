<mvc:View
    controllerName="hipt.hipt.controller.StepDetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Panel
        id="StepDetails"
        class="sapUiResponsiveMargin"
        width="auto"
    >
        <content>
            <List
                id="TaskList2"
                headerText="{ActiveScope>/stepStr}"
                headerLevel="H2"
                items="{ActiveScope>/aSteps}"
            >
                <ObjectListItem
                    id="taskListItem2"
                    title="{ActiveScope>1/stepStr}"
                    press=".onStepClick"
                    type="Navigation"
                />
            </List>
        </content>
    </Panel>
</mvc:View>
