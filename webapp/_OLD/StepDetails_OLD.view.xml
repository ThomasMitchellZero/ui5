<mvc:View
    controllerName="hipt.hipt.controller.StepDetails"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page id="StepDetails">
        <content>
            <Panel
                id="StepDetailsPanel1"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <Table
                    id="bookingTable"
                    items="{ActiveScope>/aSteps}"
                    headerText="Progress"
                    growing="true"
                    growingThreshold="5"
                    width="auto"
                >
                    <columns>
                        <Column
                            id="cIcon"
                            width="3rem"
                        >
                            <Text
                                id="tName"
                                text="Info"
                            />
                        </Column>
                        <Column id="cName">
                            <header />
                        </Column>
                        <Column
                            id="cCompletion"
                            hAlign="Begin"
                            minScreenWidth="Desktop"
                            demandPopin="true"
                            popinDisplay="WithoutHeader"
                            width="20%"
                        >
                            <header>
                                <Text
                                    id="tCompletion"
                                    text="Fart"
                                />
                            </header>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            id="listItem"
                            type="Navigation"
                            vAlign="Middle"
                            press=".onStepClick"
                        >
                            <cells>
                                <core:Icon
                                    id="cellStatusIcon"
                                    color="Information"
                                    size="1.5rem"
                                    src="{ActiveScope>1/icon}"
                                />
                                <VBox
                                    id="stepInfo"
                                    class="sapUiSmallMarginTopBottom"
                                >
                                    <ObjectNumber
                                        id="cellObjTitle"
                                        number="{ActiveScope>1/stepStr}"
                                        class="sapMObjectNumberLarge"
                                    />
                                    <ObjectStatus
                                        id="stepStatus"
                                        text="{ActiveScope>1/title}"
                                        state="{ActiveScope>1/sStatus}"
                                    />
                                </VBox>
                                <VBox id="completionNums">
                                    <ObjectNumber
                                        id="cellObjNumber"
                                        number="{ActiveScope>1/fraction}"
                                        class="sapMObjectNumberLarge"
                                        state="{ActiveScope>1/sStatus}"
                                    />
                                </VBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
            <Panel
                id="StepDetailsPanel"
                class="sapUiResponsiveMargin"
                width="auto"
            >
                <content>
                    <List
                        id="TaskList2"
                        headerText="{ActiveScope>/stepStr}"
                        headerLevel="H2"
                        items="{ActiveScope>/aSteps}"
                    >
                        <core:Icon
                            id="ghahkj"
                            src="{
                                path: 'ActiveScope>1/icon'
                            }"
                        />
                        <ObjectListItem
                            id="taskListItem2"
                            title="{ActiveScope>1/stepStr}"
                            press=".onStepClick"
                            type="Navigation"
                            icon="{
                                path: 'ActiveScope>1/icon'
                            }"
                            intro="{ActiveScope>1/sStatus}"
                            number="{
                                path: 'ActiveScope>1/fraction'
                            }"
                            numberState="{ActiveScope>1/sStatus}"
                        />
                    </List>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
